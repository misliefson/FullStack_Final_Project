<h1><center>Checkout!</center></h1>
<%= form_for @customer do |form| %>

<div class="field"><center>
	<%= form.label :first_name %>
	<%= form.text_field :first_name, id: :customer_first_name %>
</center></div>

<div class="field"><center>
	<%= form.label :last_name %>
	<%= form.text_field :last_name, id: :customer_last_name %>
</center></div>

<div class="field"><center>
	<%= form.label :email %>
	<%= form.text_field :email, id: :customer_email %>
</center></div>

<div class="field"><center>
	<%= form.label :address %>
	<%= form.text_field :address, id: :customer_address %>
</center></div>

<div class="field"><center>
	<%= form.label :city %>
	<%= form.text_field :city, id: :customer_city %>
</center></div>

<div class="field"><center>
	<%= form.label :country %>
	<%= form.text_field :country, id: :customer_country %>
</center></div>

<div class="field"><center>
	<%= form.label :postal_code %>
	<%= form.text_field :postal_code, id: :customer_postal_code %>
</center></div>

<div class="actions"><center>
    <%= form.submit %>
  </center></div>
<% end %>