<p id="notice"><%= notice %></p>

<h1 class="title"><center>One Stop Manga Shop!</h1></center>

<div class="topnav" id="myTopnav">
  <a href="#home">Home</a>
  <a href="#categories">Categories</a>
  <a href="#contact">Contact</a>
  <a href="#about">About</a>
  <a href="#cart">Shopping Cart</a>
  <a><%= form_tag(mangas_path, :method => "get", id: "search-form") do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search Manga" %>
      <%= submit_tag "Search", :name => nil %>
    <% end %></a>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Stock quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mangas.each do |manga| %>
      <tr>
        <td><%= manga.title %></td>
        <td><%= manga.author %></td>
        <td><%= manga.description %></td>
        <td><%= manga.stock_quantity %></td>
        <td><%= link_to 'Show', manga %></td>
        <td><%= link_to 'Edit', edit_manga_path(manga) %></td>
        <td><%= link_to 'Destroy', manga, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Manga', new_manga_path %>
